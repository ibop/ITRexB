<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vPriceLayout"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="5dp"
    android:background="@drawable/item_background_ripple">

    <TextView
        android:id="@+id/vTvPriceKey"
        style="@style/ProceItemKey"
        android:text="item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vTvPriceValue"
        style="@style/ProceItemKey"
        android:layout_weight="30"
        android:gravity="end|center_vertical"
        android:paddingEnd="30dp"
        android:text="0.00"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vIvUpDown"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/vIvUpDown"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_arrow_drop_up"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>